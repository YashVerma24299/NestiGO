<% layout('/layouts/boilerplate') -%>
<body>
    <h3>All Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <%  for(listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="removeunderline">
                <div class="listing-card col card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 19rem"/>
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <B><%= listing.title %></B> <br>
                            <%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %>
                        </p>
                    </div>
                </div>  
            </a>
        <% } %>
    </div>
    
</body>
