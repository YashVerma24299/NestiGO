<%- layout('/layouts/boilerplate') %>
    <div class="row">
        <h2 class=" mt-3 col-6 offset-3 ">Login for NestiGO!</h2>
        <div class="col-6 offset-3 ">
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" 
                    id="username" class="form-control" required>
                    <!-- <div class="valid-feedback">✅ Valid username</div>
                    <div class="invalid-feedback">⚠️ Please enter a username.</div> -->
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" 
                    id="password" class="form-control" required>
                    <!-- <div class="valid-feedback">✅ Strong Password</div>
                    <div class="invalid-feedback">⚠️ Please enter a password.</div> -->
                </div>

                <button class="col-6 offset-3 btn btn-outline-success mb-3">Login</button>
            </form>
        </div>
    </div>
