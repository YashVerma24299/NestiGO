<style>
  /* Oval-style nav items (for auth buttons only) */
  .nav-pill {
    padding: 6px 16px;
    margin-left: 10px;
    border-radius: 50px;
    background-color: #f8f9fa;
    border: 1px solid rgb(216, 40, 49);
    color: rgb(216, 40, 49);
    transition: all 0.3s ease-in-out;
    font-weight: 500;
  }

  .nav-pill:hover {
    background-color: rgb(216, 40, 49);
    color: #fff;
    box-shadow: 0 2px 8px rgba(216, 40, 49, 0.3);
    transform: translateY(-1px);
  }

  .custom-navbar {
    transition: all 0.3s ease-in-out;
  }

  .nav-item-custom {
    position: relative;
    transition: all 0.3s;
    margin-right: 10px;
  }

  .nav-item-custom:hover {
    color:rgb(216, 40, 49); /* Bootstrap Primary Color */
    font-weight: 600;
  }

  .nav-item-custom::after {
    content: '';
    position: absolute;
    width: 0%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: rgb(216, 40, 49);
    transition: width 0.3s ease-in-out;
  }

  .nav-item-custom:hover::after {
    width: 100%;
  }

</style>
<nav class="navbar navbar-expand-md bg-white shadow-sm sticky-top border-bottom custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold text-primary fs-4" href="/listings">
      <i class="fa-brands fa-golang fa-2x me-2"></i>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link nav-item-custom" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link nav-item-custom" href="/listings/new">Start Hosting</a>

        <% if (!currUser) { %>
          <a class="nav-link nav-pill" href="/signup"><b>Sign up</b></a>
          <a class="nav-link nav-pill" href="/login"><b>Log in</b></a>
        <% } %>

        <% if (currUser) { %>
          <a class="nav-link nav-pill" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>

    </div>
  </div>
</nav>
